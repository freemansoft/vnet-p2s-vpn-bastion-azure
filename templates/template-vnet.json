{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "lastPublishedAt": {
            "type": "string",
            "metadata": {
                "description": "The last time the template was run"
            }
        },
        "version": {
            "type": "string",
            "defaultValue": "unknown"
        },
        "project": {
            "type": "string",
            "defaultValue": "what is anyone's purpose?"
        },
        "azureRegionPrimary": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "vnetNetworkHub": {
            "type": "string"
        },
        "vnetNetworkHubName": {
            "type": "string"
        },
        "vnetNetworkSpoke": {
            "type": "string"
        },
        "vnetNetworkSpokeName": {
            "type": "string"
        },
        "subnetDefaultNetwork": {
            "type": "string"
        },
        "subnetDefaultName": {
            "type": "string"
        },
        "subnetDnsAciNetwork": {
            "type": "string"
        },
        "subnetDnsAciName": {
            "type": "string",
            "defaultValue": "DnsAciSubnet"
        },
        "subnetDataNetwork": {
            "type": "string"
        },
        "subnetDataName": {
            "type": "string"
        },
        "subnetCredentialsNetwork": {
            "type": "string"
        },
        "subnetCredentialsName": {
            "type": "string"
        },
        "subnetBastionNetwork": {
            "type": "string"
        },
        "subnetBastionName": {
            "type": "string"
        },
        "subnetVngNetwork": {
            "type": "string"
        },
        "subnetVngName": {
            "defaultValue": "GatewaySubnet",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[parameters('vnetNetworkHubName')]",
            "location": "[parameters('azureRegionPrimary')]",
            "tags": {
                "PublishedAt": "[parameters('lastPublishedAt')]",
                "Project": "[parameters('project')]",
                "Version": "[parameters('version')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetNetworkHub')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetDnsAciName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetDnsAciNetwork')]",
                            "delegations": [
                                {
                                    "name": "AciDel",
                                    "properties": {
                                        "serviceName": "Microsoft.ContainerInstance/containerGroups"
                                    }
                                }
                            ],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetBastionName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetBastionNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetVngName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetVngNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[parameters('vnetNetworkSpokeName')]",
            "location": "[parameters('azureRegionPrimary')]",
            "tags": {
                "PublishedAt": "[parameters('lastPublishedAt')]",
                "Project": "[parameters('project')]",
                "Version": "[parameters('version')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetNetworkSpoke')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetDefaultName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetDefaultNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetDataName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetDataNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetCredentialsName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetCredentialsNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkHubName'), '/', parameters('subnetBastionName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetBastionNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkSpokeName'), '/', parameters('subnetCredentialsName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetCredentialsNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkHubName'), '/', parameters('subnetDnsAciName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetDnsAciNetwork')]",
                "delegations": [
                    {
                        "name": "AciDel",
                        "properties": {
                            "serviceName": "Microsoft.ContainerInstance/containerGroups"
                        }
                    }
                ],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkSpokeName'), '/', parameters('subnetDataName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetDataNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkSpokeName'), '/', parameters('subnetDefaultName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetDefaultNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkHubName'), '/', parameters('subnetVngName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetVngNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }

        },

        {
            "name": "[concat(parameters('vnetNetworkHubName'),'/',parameters('vnetNetworkSpokeName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkHubName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkSpokeName'))]"
            ],
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2019-09-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false, // should be set to true after VPN added
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
                },
                "remoteAddressSpace": {
                    "addressPrefixes": [
                        "[ parameters('vnetNetworkSpoke')]"
                    ]
                }
            }
        },
        {
            "name": "[concat(parameters('vnetNetworkSpokeName'),'/',parameters('vnetNetworkHubName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkHubName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkSpokeName'))]"
            ],
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2019-09-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": false, // should be set to true after VPN added
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
                },
                "remoteAddressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetNetworkHub')]"
                    ]
                }
            }
        }

    ]
}