{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "lastPublishedAt": {
            "type": "String",
            "metadata": {
                "description": "The last time the template was run"
            }
        },
        "virtualNetworkGatewaysVngName": {
            "type": "String"
        },
        "publicIPAddressesVngName": {
            "type": "String"
        },
        "azureRegionPrimary": {
            "type": "String"
        },
        "vnetNetworkName": {
            "type": "String"
        },
        "subnetVngName": {
            "defaultValue": "GatewaySubnet",
            "type": "String"
        },
        "addressGatewayPeering": {
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "name": "[parameters('publicIPAddressesVngName')]",
            "location": "[parameters('azureRegionPrimary')]",
            "tags": {
                "Published At": "[parameters('lastPublishedAt')]"
            },
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2020-11-01",
            "name": "[parameters('virtualNetworkGatewaysVngName')]",
            "location": "[parameters('azureRegionPrimary')]",
            "tags": {
                "Published At": "[parameters('lastPublishedAt')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddressesVngName'))]"
                // is in different subnet
                //"[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetNetworkName'), parameters('subnetVngName'))]"
            ],
            "properties": {
                "enablePrivateIpAddress": false,
                "ipConfigurations": [
                    {
                        "name": "default",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddressesVngName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetNetworkName'), parameters('subnetVngName'))]"
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "Basic",
                    "tier": "Basic"
                },
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "enableBgp": false
            }
        }
    ]
}