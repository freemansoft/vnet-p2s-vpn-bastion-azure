{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "lastPublishedAt": {
            "type": "string",
            "metadata": {
                "description": "The last time the template was run"
            }
        },
        "version": {
            "type": "string",
            "defaultValue": "unknown"
        },
        "project": {
            "type": "string",
            "defaultValue": "what is anyone's purpose?"
        },
        "azureRegionPrimary": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "vnetNetworkHub": {
            "type": "string"
        },
        "vnetNetworkHubName": {
            "type": "string"
        },
        "vnetNetworkSpoke": {
            "type": "string"
        },
        "vnetNetworkSpokeName": {
            "type": "string"
        },
        "subnetSpokeDefaultNetwork": {
            "type": "string"
        },
        "subnetSpokeDefaultName": {
            "type": "string"
        },
        "subnetHubDnsAciNetwork": {
            "type": "string"
        },
        "subnetHubDnsAciName": {
            "type": "string",
            "defaultValue": "DnsAci"
        },
        "subnetHubShellAciNetwork": {
            "type": "string"
        },
        "subnetHubShellAciName": {
            "type": "string",
            "defaultValue": "CloudShellAci"
        },
        "subnetHubDataNetwork": {
            "type": "string"
        },
        "subnetHubDataName": {
            "type": "string"
        },
        "subnetSpokeDataNetwork": {
            "type": "string"
        },
        "storageSubnetName": {
            "type": "string"
        },
        "subnetSpokeCredentialsNetwork": {
            "type": "string"
        },
        "subnetSpokeCredentialsName": {
            "type": "string"
        },
        "subnetHubBastionNetwork": {
            "type": "string"
        },
        "subnetHubBastionName": {
            "type": "string"
        },
        "subnetHubVngNetwork": {
            "type": "string"
        },
        "subnetHubVngName": {
            "defaultValue": "GatewaySubnet",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[parameters('vnetNetworkHubName')]",
            "location": "[parameters('azureRegionPrimary')]",
            "tags": {
                "PublishedAt": "[parameters('lastPublishedAt')]",
                "Project": "[parameters('project')]",
                "Version": "[parameters('version')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetNetworkHub')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetHubDnsAciName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetHubDnsAciNetwork')]",
                            "delegations": [
                                {
                                    "name": "AciDel",
                                    "properties": {
                                        "serviceName": "Microsoft.ContainerInstance/containerGroups"
                                    }
                                }
                            ],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetHubShellAciName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetHubShellAciNetwork')]",
                            "delegations": [
                                {
                                    "name": "AciDel",
                                    "properties": {
                                        "serviceName": "Microsoft.ContainerInstance/containerGroups"
                                    }
                                }
                            ],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetHubDataName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetHubDataNetwork')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetHubBastionName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetHubBastionNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetHubVngName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetHubVngNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[parameters('vnetNetworkSpokeName')]",
            "location": "[parameters('azureRegionPrimary')]",
            "tags": {
                "PublishedAt": "[parameters('lastPublishedAt')]",
                "Project": "[parameters('project')]",
                "Version": "[parameters('version')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetNetworkSpoke')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetSpokeDefaultName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetSpokeDefaultNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('storageSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetSpokeDataNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[parameters('subnetSpokeCredentialsName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetSpokeCredentialsNetwork')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkHubName'), '/', parameters('subnetHubBastionName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetHubBastionNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkSpokeName'), '/', parameters('subnetSpokeCredentialsName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetSpokeCredentialsNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkHubName'), '/', parameters('subnetHubDnsAciName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetHubDnsAciNetwork')]",
                "delegations": [
                    {
                        "name": "AciDel",
                        "properties": {
                            "serviceName": "Microsoft.ContainerInstance/containerGroups"
                        }
                    }
                ],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkHubName'), '/', parameters('subnetHubShellAciName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetHubShellAciNetwork')]",
                "delegations": [
                    {
                        "name": "AciDel",
                        "properties": {
                            "serviceName": "Microsoft.ContainerInstance/containerGroups"
                        }
                    }
                ],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkSpokeName'), '/', parameters('storageSubnetName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetSpokeDataNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Disabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkSpokeName'), '/', parameters('subnetSpokeDefaultName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetSpokeDefaultNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vnetNetworkHubName'), '/', parameters('subnetHubVngName'))]",
            "location": "[parameters('azureRegionPrimary')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('subnetHubVngNetwork')]",
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        },
        {
            "name": "[concat(parameters('vnetNetworkHubName'),'/',parameters('vnetNetworkSpokeName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkHubName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkSpokeName'))]"
            ],
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2019-09-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false, // should be set to true after VPN added
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkSpokeName'))]"
                },
                "remoteAddressSpace": {
                    "addressPrefixes": [
                        "[ parameters('vnetNetworkSpoke')]"
                    ]
                }
            }
        },
        {
            "name": "[concat(parameters('vnetNetworkSpokeName'),'/',parameters('vnetNetworkHubName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkHubName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetNetworkSpokeName'))]"
            ],
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2019-09-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": false, // should be set to true after VPN added
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetNetworkHubName'))]"
                },
                "remoteAddressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetNetworkHub')]"
                    ]
                }
            }
        }
    ]
}